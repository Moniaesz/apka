{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2015",
    "module": "esnext",
    "lib": ["esnext"],
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}